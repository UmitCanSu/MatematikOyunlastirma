<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/uyeolwitch_Main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity"
    android:background="@color/design_default_color_primary">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="35dp"
        app:cardElevation="15dp"
        app:contentPadding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Switch
                android:id="@+id/switchUyeOl_Main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="uyeOlSwitch"
                android:text="Giris Yap" />

            <EditText
                android:id="@+id/adEdittext_Main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="İsim"
                android:inputType="textPersonName"
                android:textSize="35dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/soyisim_Edittext_Main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="Soyisim"
                android:inputType="textPersonName"
                android:textSize="35dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editTextTextEmailAddress_Mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="E-Mail"
                android:inputType="textEmailAddress"
                android:textSize="35dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/kullaniciAdiEdittext_Main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:ems="10"
                android:hint="Kullanıcı Adı"
                android:inputType="textPersonName"
                android:textSize="35dp" />

            <EditText
                android:id="@+id/sifreEdittext_Main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:ems="10"
                android:hint="Şifre"
                android:inputType="textPassword"
                android:textSize="35dp" />


            <Button
                android:id="@+id/kayıtolButton_Main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="41dp"
                android:onClick="kaydetButton"
                android:text="Giris Yap" />


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>