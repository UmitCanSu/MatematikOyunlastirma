<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProfilActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profil_resim"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/avatar"
            app:civ_border_color="@color/black"

            app:civ_border_width="5dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/camera"
            android:layout_marginLeft="100dp"
            android:onClick="profilResmiDegis"
            android:layout_gravity="bottom"

            app:civ_border_color="@color/design_default_color_primary"
            app:civ_border_width="5dp"/>
    </FrameLayout>
    <TextView
        android:id="@+id/profil_kullanıciAdi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kullanıcı Adi"
        android:textSize="30dp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/profil_adSoyad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ad Soyad"
        android:textSize="30dp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/profil_epostaAdresi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EpostaAdresi"
        android:textSize="30dp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/profil_sifre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Şifre"
        android:textSize="30dp"
        android:inputType="textPassword"
        android:layout_gravity="center"/>

</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>